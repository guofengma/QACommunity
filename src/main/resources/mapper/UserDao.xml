<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nju.zhihu.Dao.UserDao">

    <select id="getUserById" resultType="User">
        SELECT
        user_id as id,
        token as token,
        nickname as name,
        avater as avater
        FROM user
        WHERE token = #{id}
    </select>

