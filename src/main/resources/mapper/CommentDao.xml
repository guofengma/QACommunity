        <!--SET NAME = #{user.name},-->
        <!--SEX = #{user.sex},-->
        <!--AGE = #{user.age}-->
        <!--WHERE ID = #{user.id}-->
    <!--</update>-->
    <insert id="addComment">
        INSERT INTO
        comment(user_id,answer_id,reply_id,content,time)
        VALUES (
        #{comment.user_id},
        #{comment.answer_id},
         #{comment.reply_id},
         #{comment.content},
         #{comment.time}
        )
    </insert>
    <delete id="deleteCommentById">
        DELETE comment WHERE comment_id = #{id}
    </delete>

</mapper>